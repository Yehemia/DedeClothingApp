<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dedeclothingstore.controller.InventarisController">
    <top>
        <Label text="Manajemen Inventaris" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </top>
    <center>
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="Cari Produk:"/>
                <TextField fx:id="searchField" promptText="Masukkan nama produk"/>
                <Button text="Cari" onAction="#searchProduct"/>
            </HBox>
            <TableView fx:id="productTable">
                <columns>
                    <TableColumn fx:id="colName" text="Nama Produk"/>
                    <TableColumn fx:id="colCategory" text="Kategori"/>
                    <TableColumn fx:id="colPrice" text="Harga"/>
                    <TableColumn fx:id="colStock" text="Stok"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10">
            <Label text="Tambah/Edit Produk" style="-fx-font-size: 18px;"/>
            <GridPane>
                <children>
                    <Label text="Nama Produk:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    <Label text="Kategori:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="categoryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    <Label text="Harga:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="Stok:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="stockField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    <Button text="Simpan" onAction="#saveProduct" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </children>
            </GridPane>
        </VBox>
    </bottom>
</BorderPane>
